---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: etcd-volume-1
spec:
  volumeMode: Filesystem
  capacity:
    storage: 3Gi 
  accessModes:
    - ReadWriteOnce
  nfs:
    path: /srv/nfs/share/pv/apisix/etcd-volume-1
    server: 192.168.1.26
    readOnly: false
