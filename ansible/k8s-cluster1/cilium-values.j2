enableDebugLogging: true
kubeProxyReplacement: true
k8sServiceHost: {{ ansible_host }}
externalIPs:
    enabled: true
k8sServicePort: 6443
bpf:
  hostLegacyRouting: false
  masquerade: true

ipam:
  operator:
    clusterPool:
      cidr: "10.244.0.0/16" # Pod CIDR for the cluster
      maskSize: 24          

hubble:
  enabled: true
  listenAddress: ":4244"
  tls:
    enabled: true
    auto:
      enabled: true
      method: helm
      certValidityDuration: 1095

  relay:
    enabled: true


  ui:
    enabled: true
    client:
      tls:
        enabled: false
    service:
      type: NodePort
      nodePort: 31235
  metrics:
    enableOpenMetrics: false